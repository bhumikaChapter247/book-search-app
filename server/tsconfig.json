{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@server/*": ["*"]
    },
    "lib": ["es2016"],
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": ["./src/**/*.ts", "src/models/searchedTitles.js"],
  "exclude": ["node_modules"]
}
